@{
    ViewBag.Title = "Apply";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<!-- Start heading-banner  -->
<div class="heading-banner">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="~/Home/Index">Home</a></li>
                    <li class="active">Apply Course</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--  End heading-banner  -->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 class="text-info">ApplyToCourse</h4>
    <div>
        @if (ViewBag.Result != null)
        {
            <h3>@ViewBag.Result</h3>
        }
    </div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Message", htmlAttributes: new { @class = "control -label col-md-2" })
        <div class="col-md-10">
            @Html.TextArea("Message", new{
                                        @style = "height:150px; width:400px; font-weight:bold",
                                        @class = "form-control",
                                        @placeholder = "Your Message ",
                                        @required = "required" })
            @Html.ValidationMessage("Message", "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Confirm" class="btn btn-success" />
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to Home", "Index", null, new { @class = "btn btn-primary" })

    </div>
</div>
   
}


